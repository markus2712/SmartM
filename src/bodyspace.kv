# File name: bodyspace.kv
#:kivy 1.9.0

<ProductImage>:
	size_hint: None, None
	width: 200
	height: 200


<ProductBox@BoxLayout>:
	orientation: 'vertical'
	size_hint: None, None
	spacing: 20
	canvas:
		Color:
			rgba: 0.1, 0.1, 0.1, 1
		Rectangle:
			pos: self.pos
			size: self.size

<BodySpace@FloatLayout>:
	canvas:
		Color:
			rgba: 0.1, 0.1, 0.1, 1
		Rectangle:
			pos: self.pos
			size: self.size
			
	ProductBox:
		pos: root.width-self.width, root.height-self.height+50
		width: 200
		height: 760
		Label:
			markup: True
			font_size: 18
			text: 'Please choose \n your product'
		ProductImage:
			id:shower
			filename: 'shower'
			source: 'img/shower_on.png'
		ProductImage:
			id:tub
			filename: 'tub'
			source: 'img/tub_on.png'
		ProductImage:
			id:washbasin
			filename: 'washbasin'
			source: 'img/washbasin_on.png'

	
	RelativeLayout:
		Thermostat:
			id: _thermostat
    	    size_hint: None, None
        	size: 300, 300
        	color: 0.3, 0.3, 0.3, 1
        	canvas.before:
            	Color:
                	rgba: self.color
	            Ellipse:
    	        	id: _thermostat_bg
        	        size: self.size     
            	    pos: self.pos
			Label:
				center: self.parent.center
				size: self.parent.width, 50
				font_size: 64
				text: self.parent.tempText

            
