# File name: headerspace.kv
#:kivy 1.9.0

<HeaderSpace@BoxLayout>:
	orientation: 'horizontal'
	padding: 2
    spacing: 2
    size_hint_y: 0.12
	canvas:
		Color:
			rgba: 0.1, 0.9, 1, 1
		Rectangle:
			pos: self.pos
			size: self.size
	Label:
		font_size: 24
		halign: 'left'
		valign: 'middle'
		markup: True
        text: '[i][size=18px]Hello, [/size][/i]Markus'
        text_size: self.size
	
	SimpleClock:
		font_size: 18
		halign: 'right'
		valign: 'middle'
		text_size: self.size
		text: self.timetext