# File name: smartmirror.kv
#:kivy 1.9.0


<PowerButton>
	size_hint: None, None
	size: 30, 30	

<SmartMirror>:

#Header
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        HeaderSpace:
            id: _header_space
            size_hint: 1,None
            height: 50
    
    FloatLayout:
    	id: _border_top
    	size_hint: 1, None
    	height: 3
		canvas:
			Color:
				rgba: 1,1,1,1
			Rectangle:
				pos: 0,  root.height-_header_space.height
				size: self.size

#Body    
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        BodySpace:
        	id: _body_space
            size_hint: 1, None
            height: root.height - _header_space.height - _footer_space.height
    
# Footer
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'bottom'
        FooterSpace:
            id: _footer_space
            size_hint: 1,None
            height: 50
            
    FloatLayout:
    	id: _border_bottom
    	size_hint: 1, None
    	height: 3
		canvas:
			Color:
				rgba: 1,1,1,1
			Rectangle:
				pos: 0, _footer_space.height
				size: self.size
				
